<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System - Dumpscripts</name>
	<author>AP Clarke</author>
	<creationDate>Feb 2013</creationDate>
	<copyright>Copyright (C) 2015 Webmentor. All rights reserved.</copyright>
	<license>https://opensource.org/licenses/MIT MIT</license>
	<authorEmail>advice@webmentor.ie</authorEmail>
	<authorUrl>www.webmentor.ie</authorUrl>
	<version>1.4.0</version>
	<description>Dump and/or reorder all scripts generated by joomla in the head section. Version 1.4.0</description>
	<files>
		<filename plugin="dumpscripts">dumpscripts.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<config>
	<fields name="params">
		<fieldset name="scripts" label="PLG_DUMPSCRIPTS_SCRIPTS_LABEL">
			<field type="spacer" name="dumpscriptswarning" class="text"
				label="PLG_DUMPSCRIPTS_SCRIPTSWARNING_LABEL"
			/>
			<field name="dumpscripts" type="textarea" rows="10" cols="20"
				description="PLG_DUMPSCRIPTS_SCRIPTS_DUMP_DESC"
				label="PLG_DUMPSCRIPTS_SCRIPTS_DUMP_LABEL"
				default=""
				filter="string"
			/>
			<field name="orderscripts" type="textarea" rows="10" cols="20"
				description="PLG_DUMPSCRIPTS_SCRIPTS_ORDER_DESC"
				label="PLG_DUMPSCRIPTS_SCRIPTS_ORDER_LABEL"
				default=""
				filter="string"
			/>
		</fieldset>
		<fieldset name="inlinescripts" label="PLG_DUMPSCRIPTS_INLINESCRIPTS_LABEL">
			<field type="spacer" name="dumpinlinescriptswarning" class="text"
				label="PLG_DUMPSCRIPTS_INLINESCRIPTSWARNING_LABEL"
			/>
			<field name="dumpinlinescripts" type="textarea" rows="10" cols="20"
				description="PLG_DUMPSCRIPTS_INLINESCRIPTS_DUMP_DESC"
				label="PLG_DUMPSCRIPTS_INLINESCRIPTS_DUMP_LABEL"
				default=""
				filter="string"
			/>
		</fieldset>
		<fieldset name="css" label="PLG_DUMPSCRIPTS_CSS_LABEL">
			<field type="spacer" name="dumpcsswarning" class="text"
				label="PLG_DUMPSCRIPTS_CSSWARNING_LABEL"
			/>
			<field name="dumpstylesheets" type="textarea" rows="10" cols="20"
				description="PLG_DUMPSCRIPTS_CSS_DUMP_DESC"
				label="PLG_DUMPSCRIPTS_CSS_DUMP_LABEL"
				default=""
				filter="string"
			/>
			<field name="orderstylesheets" type="textarea" rows="10" cols="20"
				description="PLG_DUMPSCRIPTS_SCRIPTS_ORDER_DESC"
				label="PLG_DUMPSCRIPTS_CSS_ORDER_LABEL"
				default=""
				filter="string"
			/>
		</fieldset>
	</fields>
	</config>
</extension>
